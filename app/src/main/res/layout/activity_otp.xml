<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context=".ui.verify.OtpActivity">

    <ImageView
        android:id="@+id/image"
        android:layout_width="198dp"
        android:layout_height="212dp"
        android:layout_marginTop="68dp"
        android:src="@drawable/icc_gmail"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/headertitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/mmedium"
        android:text="@string/otp_header"
        android:textColor="@color/colorWhite"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/image"
        tools:layout_editor_absoluteY="443dp"
        tools:ignore="MissingConstraints" />


    <TextView
        android:layout_marginTop="@dimen/margin10"
        android:id="@+id/subtitle"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:lineSpacingExtra="4dp"
        android:text="@string/otp_txt"
        android:textAlignment="center"
        android:textColor="@color/colorWhite"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintTop_toBottomOf="@+id/headertitle"
        tools:layout_editor_absoluteY="504dp" />

    <LinearLayout
        android:id="@+id/layoutOtp"
        android:layout_marginTop="@dimen/margin20"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintTop_toBottomOf="@+id/subtitle">
        <EditText
            android:layout_marginTop="@dimen/margin10"
            android:id="@+id/editOtp1"
            android:layout_width="70dp"
            android:layout_height="55dp"
            android:ems="10"
            android:inputType="number"
            android:maxLength="1"
            android:text=""
            android:background="@drawable/custom_border_edittext"
            android:textColor="@color/colorPrimary"
            android:textStyle="bold"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:gravity="center" />
        <EditText
            android:layout_marginLeft="@dimen/margin20"
            android:layout_marginTop="@dimen/margin10"
            android:id="@+id/editOtp2"
            android:layout_width="70dp"
            android:layout_height="55dp"
            android:ems="10"
            android:inputType="number"
            android:maxLength="1"
            android:text=""
            android:background="@drawable/custom_border_edittext"
            android:textColor="@color/colorPrimary"
            android:textStyle="bold"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:gravity="center" />
        <EditText
            android:layout_marginLeft="@dimen/margin20"
            android:layout_marginTop="@dimen/margin10"
            android:id="@+id/editOtp3"
            android:layout_width="70dp"
            android:layout_height="55dp"
            android:ems="10"
            android:inputType="number"
            android:maxLength="1"
            android:text=""
            android:background="@drawable/custom_border_edittext"
            android:textColor="@color/colorPrimary"
            android:textStyle="bold"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:gravity="center" />
        <EditText
            android:layout_marginLeft="@dimen/margin20"
            android:layout_marginTop="@dimen/margin10"
            android:id="@+id/editOtp4"
            android:layout_width="70dp"
            android:layout_height="55dp"
            android:ems="10"
            android:inputType="number"
            android:maxLength="1"
            android:text=""
            android:background="@drawable/custom_border_edittext"
            android:textColor="@color/colorPrimary"
            android:textStyle="bold"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:gravity="center" />
    </LinearLayout>

    <Button
        android:enabled="false"
        android:id="@+id/resendOtp"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_marginTop="50dp"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:background="@drawable/button_round_background_disable"
        android:fontFamily="@font/mmedium"
        android:text="RESEND IN "
        android:textAllCaps="false"
        android:textColor="#FFF"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/layoutOtp"
        app:layout_constraintHorizontal_bias="0.495"
        tools:layout_editor_absoluteY="584dp" />



</androidx.constraintlayout.widget.ConstraintLayout>