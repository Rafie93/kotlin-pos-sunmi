<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    app:cardCornerRadius="10dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_marginTop="@dimen/margin20"
                android:id="@+id/txtReview"
                android:gravity="center"
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/mmedium"
                android:text="Anda Akan Menambahkan"
                android:textAppearance="@style/TextAppearance.AppCompat.Small"
                />

            <ImageView
                android:id="@+id/imgReview"
                android:layout_width="200dp"
                android:layout_height="150dp"
                android:src="@drawable/zeronepos" />

            <TextView
                android:layout_marginTop="@dimen/margin10"
                android:id="@+id/txtProduk"
                style="@style/viewParent"
                android:text="Indomie Hype Abise"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textColor="@color/colorBlack"
                android:textStyle="bold"
                />

            <TextView
                android:id="@+id/txtDescProduk"
                style="@style/viewParent"
                android:text="Harga Modal"
                android:textAppearance="@style/TextAppearance.AppCompat.Small"
                />
            <TextView
                android:id="@+id/txtPrice"
                style="@style/viewParent"
                android:text="0"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:textColor="@color/colorPrimary"
                android:textStyle="bold"
                />

            <TextView
                android:layout_marginTop="@dimen/margin10"
                style="@style/viewParent"
                android:text="--Atau--"
                android:textAppearance="@style/TextAppearance.AppCompat.Small"
                />
            <TextView
                android:layout_marginTop="@dimen/margin10"
                style="@style/viewParent"
                android:text="Masukkan Harga Jual"
                android:textAppearance="@style/TextAppearance.AppCompat.Small"
                />

            <EditText
                android:layout_marginTop="@dimen/margin10"
                android:id="@+id/editTextHarga"
                android:layout_width="150dp"
                android:layout_height="55dp"
                android:ems="10"
                android:inputType="number"
                android:text="0"
                android:background="@drawable/custom_border_edittext"
                android:textColor="@color/colorPrimary"
                android:textStyle="bold"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:gravity="center" />

            <TextView
                android:layout_marginTop="@dimen/margin10"
                style="@style/viewParent"
                android:text="Jumlah"
                android:textAppearance="@style/TextAppearance.AppCompat.Small"
                />

            <EditText
                android:layout_marginTop="@dimen/margin10"
                android:id="@+id/editTextJumlah"
                android:layout_width="150dp"
                android:layout_height="55dp"
                android:inputType="number"
                android:ems="10"
                android:text="1"
                android:background="@drawable/custom_border_edittext"
                android:textColor="@color/colorPrimary"
                android:textStyle="bold"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:gravity="center" />

            <LinearLayout
                android:layout_gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <Button
                    android:id="@+id/buttonOK"
                    style="@style/loginButton"
                    android:layout_margin="@dimen/margin10"
                    android:layout_width="150dp"
                    android:text="OK"/>

            </LinearLayout>


        </LinearLayout>

    </ScrollView>
</androidx.cardview.widget.CardView>
